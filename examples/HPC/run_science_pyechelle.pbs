# Activate poetry shell
source $POETRY

# Run star spectrum
python $SIMDIR/marvelsim.py --science --time 900 --mag 10.0 --teff 5800 --logg 4.5 --z 0.0 --alpha 0.0 --data data.txt --cuda -o $OUTDIR

