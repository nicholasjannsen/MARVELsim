cd $PBS_O_WORKDIR

# Export paths
POETRY=$VSC_DATA/poetry/virtualenvs/marvelsim-3qcQCF7a-py3.8/bin/activate
export POETRY
SIMDIR=$VSC_DATA/marvelsim/marvelsim
export SIMDIR
OUTDIR=$VSC_SCRATCH/marvelsim/output
